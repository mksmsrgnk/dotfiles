{
  "languageserver": {
    "golang": {
      "command": "~/go/bin/gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },

  "yaml.schemas": {
      "kubernetes": "/*.yaml"
  },
  "docker": {
          "command": "docker-langserver",
          "args": ["--stdio"],
          "filetypes": ["dockerfile", "Dockerfile"]
        }
}
